<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    
	<servlet> 
	  <servlet-name>adminValidation</servlet-name> 
	  <servlet-class>org.aricent.cloud.talkrds.action.LoginAction</servlet-class> 
	</servlet>
	
	<servlet-mapping> 
	  <servlet-name>adminValidation</servlet-name> 
	  <url-pattern>/userLogin</url-pattern>
	</servlet-mapping>


	<servlet> 
	  <servlet-name>loggingOff</servlet-name> 
	  <servlet-class>org.aricent.cloud.talkrds.action.LogoffAction</servlet-class> 
	</servlet>
	
	<servlet-mapping> 
	  <servlet-name>loggingOff</servlet-name> 
	  <url-pattern>/loginOff</url-pattern>
	</servlet-mapping>	
	
	<welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
 